# =====================================================
# SALON MANAGEMENT SYSTEM - ENVIRONMENT VARIABLES
# Copy this file to .env.local and fill in your values
# =====================================================

# Neon PostgreSQL Configuration (Primary Database)
NEON_DATABASE_URL=postgresql://username:password@ep-xxx.us-east-1.aws.neon.tech/salon_management

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# Clerk Authentication (Required for Vercel deployment)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_secret_key_here

# Clerk Webhooks
CLERK_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Database Connection (Optional - system works without it in demo mode)
DATABASE_URL=postgresql://username:password@hostname:port/database

# Application Configuration
NEXT_PUBLIC_APP_URL=https://your-domain.vercel.app
APP_URL=https://your-domain.vercel.app

# Optional: Redis for caching (if using)
UPSTASH_REDIS_REST_URL=your_redis_url_here
UPSTASH_REDIS_REST_TOKEN=your_redis_token_here

# Optional: Stripe for payments (if using)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Note: Environment variables for client-side access MUST be prefixed with NEXT_PUBLIC_
# Missing this prefix will cause Vercel deployment errors

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# File Upload (if using cloud storage)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Redis (for session storage, optional)
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Audit Logging
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_RETENTION_DAYS=90

# =====================================================
# RBAC SPECIFIC CONFIGURATION
# =====================================================

# Permission Caching
PERMISSION_CACHE_TTL=300
ROLE_CACHE_TTL=600

# Security Headers
ENABLE_SECURITY_HEADERS=true
ENABLE_CSRF_PROTECTION=true

# Default Admin User (for initial setup only)
DEFAULT_ADMIN_EMAIL=admin@salon.com
DEFAULT_ADMIN_PASSWORD=change_this_password_immediately

# Feature Flags
ENABLE_USER_REGISTRATION=false
ENABLE_PASSWORD_RESET=true
ENABLE_2FA=false
ENABLE_API_RATE_LIMITING=true
